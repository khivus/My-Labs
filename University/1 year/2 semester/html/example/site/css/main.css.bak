body {
	background-color:#17181a;
	color: white;
	height: 100%;
}

ul {
	list-style-type:none;
	margin-top: -8px;
	padding: 0;
	background-color:#2e2e33;
	text-align: center;
}
li {
	display: inline-block;
	text-align: center;
	font-size: 25px;
	line-height: 40px;
	transition: background-color 0.2s ease;
}
li a {
	display: block;
	color: white;
	text-align: center;
	padding: 16px;
	text-decoration: none;
}
li:hover {
	background-color: blue;
	text-decoration: none;
}
#background {
	position:relative;
}
#background::before {
	content: "";
	position: absolute;
	top: 0; left: 0;
	background-image: url('../img/it.jpg');
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	width: 100%;
	height: 500px;
	display: block;
	overflow: auto;
	filter: blur(5px);
	z-index:1;
}
#container {
	text-align:center;
	font-size: 30px;
	color: #dade00;
	overflow: auto;
	z-index:999;
	position:relative;
}
.me {
	position:relative;
	height: 400px;
	width: 400px;
	border-radius: 200px; 
    border: 3px solid grey;
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin-top: -210px;
	z-index:999;
}
#resume1 {
	background-color: grey;
	color: white;
	display: block;
	margin-left: 20%;
    margin-right: 20%;
	margin-top: -15px;
	overflow: auto;
	font-size: 30px;
	border: 6px solid black;

}
#resume1 img {
	width: 200px;
	height: 260px;
	position: relative;
	left: 50px;
	top: -15px;
	float: left;
	clear: both;
}
#resume1 p {
	padding-left: 20px;
}
#resume1 h3 {
	text-align: center;
}
#resume1 .inf  {
	text-align: center;
}
#resume1 table  {
	margin-top:-15px;
}
#contact {
	text-align: left;
	font-size: 22px;
}
#contact p {
	font-size: 29px;
}
#contact img {
	width: 40px;
	height: 40px;
	float: left;
	clear: both;
	margin-top: 5px;
}
#contact a {
	color:#2a51fa;
}
#contact a:visited {
	color:#2a51fa;
}
#container_about {
	display:block;
	background-color: gray;
	overflow: auto;
	margin-right: 10%;
	margin-left: 10%;
	margin-top: -10px;
	padding-left: 20px;
	padding-right: 20px;
	font-size: 36px;
	text-align:justify;
}
#container_about .city {
	width: 800px;
	float:right;
	margin: 10px;
}
#container_about .school, .medal {
	display: inline-block;
	width: 600px;
	height: 400px;
	margin-right: 0 auto;
	margin-left: 0 auto;
}
/*#container_about .medal {
	display: inline-block;
	width: 600px;
	height: 400px;
	margin: 0 auto;
}*/
#container_about .dance {
	display: block;
	width: 950px;
	height: 500px;
	margin: 0 auto;
}
#container_about .vyatsu {
	display: block;
	width: 800px;
	height: 500px;
	margin: 0 auto;
}
#container_about .nofloat {
	clear:right;
}
#container_about a:visited {
	color: blue;
}
#container_about a:active {
	color: red;
}
#container_about .bold {
	font-weight:bold;
}

#container_achivements {
	display: block;
	overflow: auto;
	margin-right: 5%;
	margin-left: 5%;
	padding-left: 20px;
	padding-right: 20px;
}
#container_achivements img {
	width: 450px;
	height: 600px;
}
figure {
    border: thin #c0c0c0 solid;
    display: inline-block;
    padding: 5px;
	height: auto;
    width: 450px;
	
}
figcaption {
	text-align: center;
	font-size:20px;
}